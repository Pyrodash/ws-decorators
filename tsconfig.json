{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true
    },
    "exclude": ["node_modules", "dist"]
}