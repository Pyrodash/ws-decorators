{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2018",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "lib": ["ES2018"],
        "types": ["reflect-metadata"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}